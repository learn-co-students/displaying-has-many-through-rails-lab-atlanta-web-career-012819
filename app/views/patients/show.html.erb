<h1><%= @patient.name %></h1>
<table style="text-align: left">
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Appointment</th>
    </tr>
  </thead>
  <tbody>
  <% @patient.appointments.each do |appt| %>
    <tr>
      <td><%= link_to appt.doctor.name, doctor_path(appt.doctor) %></td>
      <td><%= appt.appt_time %></td>
    </tr>
  <% end %>
  </tbody>
</table>
